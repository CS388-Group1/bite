<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecipeDetailActivity">>

    <!-- Views and other elements go here -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Back Arrow Button -->
        <!-- Recipe Label
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="72dp"
            android:layout_height="118dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="37dp"
            android:layout_marginTop="16dp"
            android:background="?android:attr/selectableItemBackground"

            android:src="@drawable/back_arrow" />
           -->
        <TextView
            android:id="@+id/recipeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Recipe"
            android:textSize="20sp" />

        <!-- Favorite Button
        <ImageButton
            android:id="@+id/favoriteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/empty_heart" />
        -->
        <!-- Recipe Image -->
        <ImageView
            android:id="@+id/recipeImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/recipeLabel"
            android:scaleType="centerCrop" />

        <!-- Recipe Title -->
        <TextView
            android:id="@+id/recipeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recipeImage"
            android:layout_marginTop="16dp"
            android:text="Recipe Title"
            android:textSize="24sp" />

        <!-- Recipe Author -->
        <TextView
            android:id="@+id/recipeAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recipeTitle"
            android:layout_marginTop="8dp"
            android:text="Recipe Author"
            android:textSize="16sp" />

        <!-- Recipe Description -->
        <TextView
            android:id="@+id/recipeDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recipeAuthor"
            android:layout_marginTop="16dp"
            android:text="Recipe Description" />

        <!-- Ingredients Section -->
        <TextView
            android:id="@+id/ingredientsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recipeDescription"
            android:layout_marginTop="16dp"
            android:text="Ingredients"
            android:textSize="20sp" />

        <!-- Ingredients List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ingredientsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ingredientsTitle"
            android:layout_marginTop="8dp" />

        <!-- Instructions Section -->
        <TextView
            android:id="@+id/instructionsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ingredientsRecyclerView"
            android:layout_marginTop="16dp"
            android:text="Instructions"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/recipeInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/instructionsTitle"
            android:layout_marginTop="8dp"
            android:text="Instructions"
            android:textSize="16dp" />


    </RelativeLayout>

</ScrollView >
