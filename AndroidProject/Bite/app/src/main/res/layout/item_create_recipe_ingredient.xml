<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ingredientTextView"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_gray_background"
        android:text="Ingredient"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/portionTextView"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_gray_background"
        android:text="Portion"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/ingredientTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/minusButton"
        android:layout_width="58dp"
        android:layout_height="39dp"
        android:layout_marginTop="5dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toEndOf="@+id/portionTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/minus_in_circle" />

</androidx.constraintlayout.widget.ConstraintLayout>